/**
 * Implements hook_help().
 */
function simple_voting_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.simple_voting':
      drupal_set_message(t('This module provides a simple voting system.'));
      break;
  }
}

/**
 * Implements hook_menu().
 */
function simple_voting_menu() {
  $items = [];

  $items['voting'] = [
    'title' => 'Voting',
    'page callback' => 'simple_voting_display',
    'access callback' => TRUE,
  ];

  return $items;
}

